def TRAINPOS(HOGPOS,LBPHOGPOS):
    TrainFile = []
    
    for a in HOGPOS[:624]:
        TrainFile.append(a)
    
    
    for b in LBPHOGPOS[:624]:
        TrainFile.append(b)
    #print len(TrainFile)
    return TrainFile   
def TRAINNEG(HOGTrainNeg,LBPHOGTrainNeg):
    TrainFile1 = []
    
    for a in HOGTrainNeg[:]:
        TrainFile1.append(a)
    
    for b in LBPHOGTrainNeg[:]:
        TrainFile1.append(b)

    #print len(TrainFile1)
    return TrainFile1

def TRAINFILE(TRAINPOS,TRAINNEG):
    TRAINFILE = []
    #print len(TRAINPOS)
    #print len(TRAINNEG)
    for i in TRAINPOS:
        TRAINFILE.append(i)
    for j in TRAINNEG:
        TRAINFILE.append(j)
    #print len(TRAINFILE)
    return TRAINFILE
    


def TESTPOS(HOGPOS,LBPHOGPOS):
    TestFile = []
    
    
    for d in HOGPOS[624:]:
        TestFile.append(d)
   
    
    for e in LBPHOGPOS[624:]:
        TestFile.append(e)
  
   
    return TestFile   
def TESTNEG(HOGTestNeg,LBPHOGTestNeg):
    TestFile1 = []
    for d in HOGTestNeg[:]:
        TestFile1.append(d) 
    for b in LBPHOGTestNeg[:]:
        TestFile1.append(b)

    
    return TestFile1

def TESTFILE(TESTPOS,TESTNEG):
    TESTFile = []
    for i in TESTPOS:
        TESTFile.append(i)
    for j in TESTNEG:
        TESTFile.append(j)
    #print len(TESTFile)
    return TESTFile
  

